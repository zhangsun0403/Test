<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.scanmappers.authoritiesMapper">

    <resultMap id="maps" type="com.example.demo.Entity.authorities">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="authority" column="authority"/>
    </resultMap>
    <select id="select" resultMap="maps">
        SELECT username,authority FROM authorities where username=#{username}
    </select>
    <insert id="insert" >
        INSERT INTO authorities(username,authority) VALUES(#{username},#{authority})
    </insert>
</mapper>